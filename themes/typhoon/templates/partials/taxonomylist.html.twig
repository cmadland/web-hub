{% set taxlist = children_only is defined ? taxonomylist.getChildPagesTags() : taxonomylist.get() %}

{% if taxlist %}
  <span class="tags text-sm">
    {% for tax,value in taxlist[taxonomy] %}
      <a href="{{ base_url }}/{{ taxonomy }}{{ config.system.param_sep }}{{ tax }}{{ anchor }}">
            <span class="mr-2">
                {{ tax }}
            </span>
        </a>
    {% endfor %}
</span>
{% endif %}
