{% set title_color =  page.header.title_text == 'light'  ? 'text-gray-100' : (page.header.title_text == 'dark' ? 'text-gray-900' : 'text-gray-900 dark:text-gray-100') %}
{% set subtitle_color =  page.header.title_text == 'light' ? 'text-gray-300' : (page.header.title_text == 'dark' ? 'text-primary' : 'text-gray-700 dark:text-gray-300') %}

<div class="w-5/6 md:w-3/4 lg:w-2/3 xl:w-1/2 text-center mx-auto mb-16">
  {% if page.header.subtitle %}
    <div class="text-xs md:text-sm opacity-75 font-semibold uppercase tracking-wide {{ subtitle_color }}">
      {{ page.header.subtitle|raw }}
    </div>
  {% endif %}

  <h2 class="mt-1 tracking-tight leading-tighter text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-extrabold {{ title_color }}">
    {{ page.header.title|raw }}
  </h2>

  {% if include_content != false and page.content %}
    <div class="mt-3 text-base md:text-lg lg:text-xl prose">
      {{ page.content|raw }}
    </div>
  {% endif %}
</div>